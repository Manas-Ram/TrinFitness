    <% Object.keys(weeklyCalendar).forEach(function(week) { %>
        <h2><%= week %></h2>
        <% Object.keys(weeklyCalendar[week]).forEach(function(day) { %>
            <% if (weeklyCalendar[week][day]) { %>
                <% Object.keys(weeklyCalendar[week][day]).forEach(function(time) { %>
                    <div><%= day %> <%= time %>:
                        <% if (weeklyCalendar[week][day][time] === null) { %>
                            <button onclick="requestSlot('<%= week %>', '<%= day %>', '<%= time %>')">Request</button>
                        <% } else { %>
                            <button disabled>Requested</button>
                        <% } %>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No times available for <%= day %>.</p>
            <% } %>
        <% }); %>
    <% }); %>


    <script>
        function requestSlot(week, day, time) {
    fetch('/request-slot', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ week, day, time, user: 'YourUsername' })  //replace with google name
    }).then(response => response.json())
      .then(data => {
          if (data.success) {
              alert(data.message);
              location.reload();  
          } else {
              alert(data.message);
          }
      });
}
        </script>
