        <h1>Create Your Custom Lunch Plan</h1>
        <form action="/lunchplan" method="post">
            <label for="mealType">Meal type:</label>
            <select name="mealType" id="mealType">
                <option value="high_protein">High Protein</option>
                <option value="high_fat">High Fat</option>
            </select>
    
            <label for="dietaryRestriction">Dietary Restriction:</label>
            <select name="dietaryRestriction" id="dietaryRestriction">
                <option value="none">No Restriction</option>
                <option value="vegan">Vegan</option>
                <option value="vegetarian">Vegetarian</option>
            </select>
    
            <button type="submit">Generate</button>
        </form>
    
        <% if (suggestions && suggestions.length > 0) { %>
          <h2>Suggested Meals</h2>
          <ul>
              <% suggestions.forEach(function(item) { %>
                  <li><%= item.name %> - Protein: <%= item.protein %>, Fat: <%= item.fat %>, Carbs: <%= item.carbs %>, Calories: <%= item.calories %></li>
              <% }); %>
          </ul>
      <% } else { %>
          <p>No suggestions found. Try adjusting your filters.</p>
      <% } %>
